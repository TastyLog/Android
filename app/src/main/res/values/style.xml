<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--바텀 네비바 스타일-->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/pretendard</item>
        <item name="android:textSize">10sp</item>
        <item name="itemIconTint">@drawable/bottom_navigation_icon_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_text_color</item>
    </style>


    <!--커스텀 필터 스타일-->
    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- 테두리 색상 변경 -->
        <item name="boxStrokeColor">@color/black</item>
        <!-- 텍스트 및 힌트 색상 변경 -->
        <item name="android:textColorHint">@color/sub_color_gray3</item>
        <item name="android:textColor">@color/black</item>
        <!-- 활성화 시 색상 변경 -->
        <item name="colorControlActivated">@color/main_color</item>

        <item name="colorControlNormal">@color/black</item>

        <item name="android:textCursorDrawable">@color/black</item>
    </style>




</resources>