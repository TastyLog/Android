<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/textview_search_keyword"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:fontFamily="@font/pretendard"
        android:text="노랑 통닭"
        android:textSize="14sp"
        android:textColor="#696969"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/icon_history"
        android:drawablePadding="10dp"/>

    <FrameLayout
        android:id="@+id/frame_layout_delete_search_keyword"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/image_button_selector_ripple"
        >

        <ImageView
            android:id="@+id/imageview_delete_search_keyword"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_close" />

    </FrameLayout>


</LinearLayout>